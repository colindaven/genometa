			<mx:RemoveChild target="{linkbutton2}"/>
			<mx:RemoveChild target="{linkbutton1}"/>
			<mx:RemoveChild target="{linkbutton7}"/>
			<mx:RemoveChild target="{hbox5}"/>
			<mx:RemoveChild target="{vrule1}"/>
			<mx:RemoveChild target="{hbox6}"/>
			<mx:RemoveChild target="{hbox7}"/>
			<mx:RemoveChild target="{hbox16}"/>
